set terminal postscript eps enhanced color size 6.6,3.3 font "Helvetica,18" linewidth 2
set output 'LJ.eps'
set key right top
unset ytics 
unset xtics 
set ylabel "u_L_J " font ",20" offset 0.5,0,0
set xlabel "r_i_j" font ",20"
set yrange [-1:3]
set xrange [0:2]
set size square
set size .5,1
e = 0.6502
o = 0.3166
f(x) = 4*e*((o/x)**12-(o/x)**6)
g(x) = 0
plot	f(x) w l lc rgb "black"  notitle ,\
	g(x) w d lc rgb "black"  notitle

